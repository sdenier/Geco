<html>
  <head>
{{#geco_FileOutput?}}
    <title>{{geco_StageTitle}}</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
{{/geco_FileOutput?}}
{{#geco_AutoRefresh?}}
    <meta http-equiv="refresh" content="{{geco_RefreshInterval}}">
{{/geco_AutoRefresh?}}
    <style type="text/css">
    html, body, table {
        font-family: Verdana, sans-serif;
        font-size: 12px;
    }
    h1 {
        font-size: 1.5em;
        text-align: center;
    }
    h2 { 
        font-size: 1.5em;
        margin: 1em 0 0.5em 1em;
    }
    table {
        border-collapse:collapse;
    }
    th, td {
        padding-right: 10px;
    }
    td {
        color: #586A7C;
    }
    th:last-of-type, td:last-of-type {
        padding-right: 0;
    }
    tbody tr:nth-child(2n+1) {
        background-color: rgba(87, 168, 255, 0.11);
    }
    tbody tr:nth-child(2n) {
        background-color: rgba(87, 168, 255, 0);
    }
    tbody.empty tr {
        background-color: rgba(87, 168, 255, 0);
    }
    .right {
        text-align: right;
    }
    .left {
        text-align: left;
        padding-right: 20px;
        color: #000000;
    }
    .time {
      font-weight: bold;
      padding-right: 20px;
    }
    .diff {
      font-style: italic
    }
    </style>
  </head>
  <body>
    <h1>{{geco_StageTitle}} - {{i18n_RankingTitle}}</h1>
{{#geco_ResultsCollection}}
    <h2>{{geco_ResultName}} ({{geco_NbFinishedRunners}}/{{geco_NbPresentRunners}}){{#geco_SingleCourse?}} - {{geco_CourseLength}}m, {{geco_CourseClimb}}m{{/geco_SingleCourse?}}</h2>
    <table>
      <thead>
        <tr class="runner"><th></th><th class="left" colspan="2">Équipe</th><th class="left">Équipiers</th><th class="left">{{i18n_CategoryHeader}}</th><th class="time right">{{i18n_TimeHeader}}</th><th class="right">{{i18n_DiffHeader}}</th><th class="right">{{i18n_PaceHeader}}</th><th class="right">{{i18n_RacetimeHeader}}</th><th class="right">Pénalités</th><th class="right">Spéciale</th></tr>
      </thead>
      <tbody>
{{#geco_RankedRunners}}
      <tr class="runner"><td class="right">{{geco_RunnerRank}}</td><td class="right">{{geco_RunnerStartId}}</td><td class="left">{{geco_RunnerClubName}}</td><td class="left">{{geco_RunnerFirstName}} / {{geco_RunnerLastName}}</td><td class="left">{{geco_RunnerCategory}}</td><td class="time right">{{geco_RunnerResultTime}}</td><td class="diff right">{{geco_RunnerDiffTime}}</td><td class="pace right">{{geco_RunnerPace}}</td><td class="right">{{geco_RunnerRaceTime}}</td><td class="right">{{geco_RunnerTimePenalty}}</td><td class="right">{{geco_RunnerManualTimePenalty}}</td></tr>
{{/geco_RankedRunners}}
      </tbody>
      <tbody class="empty"><tr><td>&nbsp;</td></tr></tbody>
      <tbody>
{{#geco_UnrankedRunners}}
      <tr class="runner"><td class="right">{{geco_RunnerRank}}</td><td class="right">{{geco_RunnerStartId}}</td><td class="left">{{geco_RunnerClubName}}</td><td class="left">{{geco_RunnerFirstName}} / {{geco_RunnerLastName}}</td><td class="left">{{geco_RunnerCategory}}</td><td class="time right">{{geco_RunnerStatusOrTime}}</td><td class="diff right">{{geco_RunnerDiffTime}}</td><td class="pace right">{{geco_RunnerPace}}</td><td class="right">{{geco_RunnerRaceTime}}</td><td class="right">{{geco_RunnerTimePenalty}}</td><td class="right">{{geco_RunnerManualTimePenalty}}</td></tr>
{{/geco_UnrankedRunners}}
      </tbody>
    </table>
{{/geco_ResultsCollection}}
  </body>
</html>
